{
  "version": "0.2.1",
  "name": "JIRA Scrum Cards",
  "manifest_version": 2,
  "author": "Krasimir Chariyski",
  "homepage_url": "https://github.com/Chariyski/JIRA-Scrum-Cards",
  "description": "Create printable scrum cards form JIRA(v5) issues",
  "version": "0.2",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": false
  },
  "permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon48.png",
      "38": "img/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "img/icon128.png"
  ]
}