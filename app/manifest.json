{
  "version": "2.0.0",
  "name": "JIRA Cards for Task Board",
  "manifest_version": 2,
  "author": "Krasimir Chariyski",
  "homepage_url": "https://github.com/Chariyski/JIRA-Scrum-Cards",
  "description": "Create printable cards for task board form JIRA issues",
  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon48.png",
      "38": "images/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "images/icon128.png"
  ]
}
